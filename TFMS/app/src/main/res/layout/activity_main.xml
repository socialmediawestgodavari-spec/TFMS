<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/edtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Principal Amount (₹)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edtRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate (₹ per ₹100 per month)"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Start Date"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtDate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date: Not Selected"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btnDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select End Date"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date: Not Selected"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate Interest"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/txtPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Principal Amount: ₹0.00"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 0 years, 0 months, 0 days"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Amount (P + I): ₹0.00"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
